{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "daemon": false,
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/*"]
    },
    "test": {
      "dependsOn": ["^test"]
    }
  }
}
