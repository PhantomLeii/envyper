{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["test", "^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env.production", "**/*.ts", "**/*.tsx"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["$TURBO_DEFAULT$", "**/*.ts", "**/*.tsx"]
    },
    "test": {
      "dependsOn": ["lint", "^test"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.test",
        "**/*.test.ts",
        "**/*.test.tsx"
      ]
    },
    "start": {
      "dependsOn": ["build"],
      "inputs": ["dist/*"]
    },
    "clean": {
      "dependsOn": ["build", "test"],
      "inputs": ["dist/**"]
    }
  }
}
