{
  "name": "@envyper/api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build --entrypoints src/index.ts --outdir dist --target node",
    "test": "bun test",
    "lint": "eslint src/**/*.ts",
    "migrate": "bun run migrate --package @envyper/orm",
    "migrate:reset": "npm run migrate -w "
  },
  "dependencies": {
    "@envyper/orm": "workspace:*",
    "hono": "^4.6.14"
  },
  "devDependencies": {
    "@envyper/eslint-config": "workspace:*",
    "@envyper/typescript-config": "workspace:*",
    "@envyper/zod": "workspace:*"
  }
}
