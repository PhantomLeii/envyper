{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@envyper/typescript-config/base.json",
  "compilerOptions": {
    "types": ["react", "react-dom"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
